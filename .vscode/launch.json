    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run DataLab",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cdl/app.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${config:python.defaultInterpreterPath}",
            "justMyCode": true,
            "env": {
                // "DEBUG": "1",
                // "LANG": "fr",
                "QT_COLOR_MODE": "light",
            }
        },
        {
            "name": "Run Test Launcher",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cdl/tests/__init__.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${config:python.defaultInterpreterPath}",
            "justMyCode": true,
            "env": {
                // "DEBUG": "1",
                "QT_COLOR_MODE": "light",
            }
        },
        {
            "name": "Run current file",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${config:python.defaultInterpreterPath}",
            "justMyCode": false,
            "args": [
                // "--h5browser",
                // "${workspaceFolder}/cdl/data/tests/format_v1.7.h5",
                // "C:/Dev/Projets/DataLab_Test_CEA/cdl_test_cea/data/lmj_cbfx.h5,/A/valeur"
                // "${workspaceFolder}/cdl/data/tests/format_v1.7.h5,/DataLab_Ima/i002: i002+i004",
                // "--unattended",
                // "--screenshot",
                // "--verbose",
                // "quiet",
                // "--delay",
                // "1"
            ],
            "env": {
                // "DEBUG": "1",
                // "TEST_SEGFAULT_ERROR": "1",
                "LANG": "en",
                // "QT_COLOR_MODE": "light",
            }
        },
        {
            "name": "Run current file (unattended)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${config:python.defaultInterpreterPath}",
            "justMyCode": false,
            "args": [
                "--unattended",
            ],
            "env": {
                // "DEBUG": "1",
            }
        },
        {
            "name": "Profile current file",
            "type": "python",
            "request": "launch",
            "module": "cProfile",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${config:python.defaultInterpreterPath}",
            "args": [
                "-o",
                "${file}.prof",
                "${file}"
            ],
        },
        {
            "name": "Run H5browser",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cdl_test_cea/tests/h5browser1_test.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${config:python.defaultInterpreterPath}",
            "justMyCode": true,
            "env": {
                "DEBUG": "1",
                // "QT_COLOR_MODE": "light",
            },
            "args": [
                // "--unattended",
                // "--screenshot",
            ],
        },
    ]
}